@model WebFerreteria.Models.Categorium

@{
    ViewData["Title"] = "Detalle Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="about" class="about section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <h1>Detalle de Categoría</h1>

                    <div>
                        <hr />
                        <dl class="row">
                            <dt class = "col-sm-2">Nombre</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Nombre)
                            </dd>
                            <dt class = "col-sm-2">Usuario Registro</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.UsuarioRegistro)
                            </dd>
                            <dt class = "col-sm-2">Fecha Registro</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.FechaRegistro)
                            </dd>
                            <dt class = "col-sm-2">Estado</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Estado)
                            </dd>
                        </dl>
                    </div>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
                        <a asp-action="Index">Volver a la lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
