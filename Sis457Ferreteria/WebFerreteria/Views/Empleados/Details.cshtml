@model WebFerreteria.Models.Empleado

@{
    ViewData["Title"] = "Detalle Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="about" class="about section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <h1>Detalle de Empleado</h1>

                    <div>
                        <h4>Empleado</h4>
                        <hr />
                        <dl class="row">
                            <dt class = "col-sm-2">Cédula de Identidad</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.CedulaIdentidad)
                            </dd>
                            <dt class = "col-sm-2">Nombres</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Nombres)
                            </dd>
                            <dt class = "col-sm-2">Primer Apellido</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.PrimerApellido)
                            </dd>
                            <dt class = "col-sm-2">Segundo Apellido</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.SegundoApellido)
                            </dd>
                            <dt class = "col-sm-2">Dirección</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Direccion)
                            </dd>
                            <dt class = "col-sm-2">Celular</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Celular)
                            </dd>
                            <dt class = "col-sm-2">Cargo</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Cargo)
                            </dd>
                            <dt class = "col-sm-2">Usuario Registro</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.UsuarioRegistro)
                            </dd>
                            <dt class = "col-sm-2">Fecha Registro</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.FechaRegistro)
                            </dd>
                            <dt class = "col-sm-2">Estado</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Estado)
                            </dd>
                        </dl>
                    </div>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
                        <a asp-action="Index">Volver a la lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
