@model WebFerreteria.Models.Producto

@{
    ViewData["Title"] = "Detalle Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="about" class="about section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <h1>Detalle de Producto</h1>

                    <div>
                        <hr />
                        <dl class="row">
                            <dt class = "col-sm-2">Código</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Codigo)
                            </dd>
                            <dt class = "col-sm-2">Descripción</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Descripcion)
                            </dd>
                            <dt class = "col-sm-2">Marca</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Marca)
                            </dd>
                            <dt class = "col-sm-2">Unidad de Medida</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.UnidadMedida)
                            </dd>
                            <dt class = "col-sm-2">Precio Venta</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.PrecioVenta)
                            </dd>
                            <dt class = "col-sm-2">Stock</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Stock)
                            </dd>
                            <dt class = "col-sm-2">Usuario Registro</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.UsuarioRegistro)
                            </dd>
                            <dt class = "col-sm-2">Fecha Registro</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.FechaRegistro)
                            </dd>
                            <dt class = "col-sm-2">Estado</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Estado)
                            </dd>
                            <dt class = "col-sm-2">Categoría</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.IdCategoriaNavigation.Id)
                            </dd>
                        </dl>
                    </div>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
                        <a asp-action="Index">Volver a la lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
