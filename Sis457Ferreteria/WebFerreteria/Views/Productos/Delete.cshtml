@model WebFerreteria.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="about" class="about section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <h1>Eliminar Producto</h1>

                    <h3>¿Está seguro que desea eliminar el Producto?</h3>
                    <div>
                        <h4>Producto</h4>
                        <hr />
                        <dl class="row">
                            <dt class = "col-sm-2">Código</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Codigo)
                            </dd>
                            <dt class = "col-sm-2">Descripción</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Descripcion)
                            </dd>
                            <dt class = "col-sm-2">Marca</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Marca)
                            </dd>
                            <dt class = "col-sm-2">Unidad de Medida</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.UnidadMedida)
                            </dd>
                            <dt class = "col-sm-2">Precio Venta</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.PrecioVenta)
                            </dd>
                            <dt class = "col-sm-2">Stock</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Stock)
                            </dd>
                            <dt class = "col-sm-2">Usuario Registro</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.UsuarioRegistro)
                            </dd>
                            <dt class = "col-sm-2">Fecha Registro</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.FechaRegistro)
                            </dd>
                            <dt class = "col-sm-2">Estado</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Estado)
                            </dd>
                            <dt class = "col-sm-2">Categoría</dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.IdCategoriaNavigation.Nombre)
                            </dd>
                        </dl>
    
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                            <a asp-action="Index">Volver a la lista</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
