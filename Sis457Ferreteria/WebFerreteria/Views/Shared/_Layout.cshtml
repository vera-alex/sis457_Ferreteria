<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebFerreteria</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>DigiMedia - Creative SEO HTML5 Template</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">


    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/css/fontawesome.css">
    <link rel="stylesheet" href="~/css/templatemo-digimedia-v3.css">
    <link rel="stylesheet" href="~/css/animated.css">
    <link rel="stylesheet" href="~/css/owl.css">

    <style>
        /* Estilos básicos para el menú */
        .nav {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .nav li {
            position: relative;
        }

        .nav a {
            display: block;
            padding: 15px;
            color: white;
        }

        /* Estilos para el submenu */
        .submenu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: #f6f6f6;
            list-style: none;
            padding: 0;
            margin: 0;
            min-width: 200px;
        }

        .submenu li a {
            padding: 15px;
        }

        .nav li:hover .submenu {
            display: block;
        }
    </style>
</head>
<body>
    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- Pre-header Starts -->
    <div class="pre-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-sm-8 col-7">
                    <ul class="info">
                        <li><a href="#"><i class="fa fa-envelope"></i>todo.uno@gmail.com</a></li>
                        <li><a href="#"><i class="fa fa-phone"></i>64-23598</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 col-sm-4 col-5">
                    <ul class="social-media">
                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Pre-header End -->
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a class="logo" asp-controller="Home" asp-action="Index">
                            <img src="~/images/logo.png" alt="" width="80" height="80">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li class="scroll-to-section">
                                <a class="active" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                            @if (User.Identity.IsAuthenticated == true)
                            {
                                <li class="scroll-to-section">
                                    <a style="color: #55aae8">Catálogos</a>
                                    <ul class="submenu">
                                        <li class="scroll-to-section dropdown-item">
                                            <a asp-area="" asp-controller="Categorias" asp-action="Index">Categorías</a>
                                        </li>
                                        <li class="scroll-to-section dropdown-item">
                                            <a asp-area="" asp-controller="Productos" asp-action="Index">Productos</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="scroll-to-section">
                                    <a class="active" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                                </li>
                                <li class="scroll-to-section">
                                    <a class="active" asp-area="" asp-controller="Proveedores" asp-action="Index">Proveedores</a>
                                </li>
                                <li class="scroll-to-section">
                                    <a style="color: #55aae8">Compra/Venta</a>
                                    <ul class="submenu">
                                        <li class="scroll-to-section dropdown-item">
                                            <a class="active" asp-area="" asp-controller="Home" asp-action="Index">Compras</a>
                                        </li>
                                        <li class="scroll-to-section dropdown-item">
                                            <a class="active" asp-area="" asp-controller="Home" asp-action="Index">Ventas</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="scroll-to-section">
                                    <a style="color: #55aae8">Administración</a>
                                    <ul class="submenu">
                                        <li class="scroll-to-section dropdown-item">
                                            <a class="active" asp-area="" asp-controller="Empleados" asp-action="Index">Empleados</a>
                                        </li>
                                        <li class="scroll-to-section dropdown-item">
                                            <a class="active" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                        </li>
                                    </ul>
                                </li>
                                
                            }
                            @if (User.Identity.IsAuthenticated == false)
                            {
                                <li class="scroll-to-section">
                                    <div class="border-first-button">
                                        <a asp-controller="Account" asp-action="Login">Iniciar Sesión</a>
                                    </div>
                                </li>
                            }
                            else
                            {
                                <li>
                                    @await Html.PartialAsync("_LogoutPartial")
                                </li>
                            }
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebFerreteria - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <!-- Scripts -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/owl-carousel.js"></script>
    <script src="~/js/animation.js"></script>
    <script src="~/js/imagesloaded.js"></script>
    <script src="~/js/custom.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
