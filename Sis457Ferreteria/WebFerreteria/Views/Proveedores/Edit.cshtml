@model WebFerreteria.Models.Proveedor

@{
    ViewData["Title"] = "Editar Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="about" class="about section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <h1>Editar Proveedor</h1>

                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label class="control-label">NIT</label>
                                    <input asp-for="Nit" class="form-control" />
                                    <span asp-validation-for="Nit" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Razón Social</label>
                                    <input asp-for="RazonSocial" class="form-control" />
                                    <span asp-validation-for="RazonSocial" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Dirección</label>
                                    <input asp-for="Direccion" class="form-control" />
                                    <span asp-validation-for="Direccion" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Teléfono</label>
                                    <input asp-for="Telefono" class="form-control" />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                                <input type="hidden" asp-for="UsuarioRegistro" />
                                <input type="hidden" asp-for="FechaRegistro" />
                                <input type="hidden" asp-for="Estado" />
                                <div class="form-group">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index">Volver a la lista</a>
                    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
